{
  "name": "Recline CSV Viewer",
  "version": "0.3.0",
  "description": "Allows viewing csv files (.csv) directly inside Chrome.",
  "manifest_version": 2,
  "icons": {
    "128": "img/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*", "file://*/*"
      ],
      "js": ["background.js", "csvify.js"]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "<all_urls>"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
